<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/settingBgColor"
    android:orientation="vertical"
    tools:context="org.thoughtcrime.securesms.conversation.v2.UserActivity"
    tools:theme="@style/Theme.Session.DayNight.NoActionBar">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:contentInsetStart="0dp"
        app:contentInsetStartWithNavigation="0dp">

        <RelativeLayout
            android:id="@+id/rlToolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:text="@string/AccessibilityId_settings"
                android:textColor="?reverseMainColor"
                android:textSize="20sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:id="@+id/rlEdit"
                android:layout_width="@dimen/small_profile_picture_size"
                android:layout_height="@dimen/small_profile_picture_size"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:contentDescription="@string/AccessibilityId_search_icon"
                android:visibility="gone">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_edit"
                    app:tint="?attr/colorControlNormal" />

            </RelativeLayout>

        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <include
                android:id="@+id/profilePictureView"
                layout="@layout/view_profile_picture_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="46dp" />

            <TextView
                android:id="@+id/tvGroupName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:contentDescription="@string/AccessibilityId_username"
                android:textColor="?attr/reverseMainColor"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:text="WXX" />

            <LinearLayout
                android:id="@+id/llSessionId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/shape_setting_bg_16"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_border_26"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="16dp"
                    android:paddingTop="10dp"
                    android:paddingEnd="16dp"
                    android:paddingBottom="10dp">

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:src="@drawable/ic_dot" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:text="@string/your_session_id"
                        android:textColor="?attr/reverseMainColor"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvSessionIdCopy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:drawableStart="@drawable/ic_copy"
                        android:drawablePadding="4dp"
                        android:drawableTint="?attr/reverseMainColor"
                        android:text="@string/copy"
                        android:textColor="?attr/reverseMainColor"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <TextView
                    android:id="@+id/publicKeyTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:paddingStart="20dp"
                    android:paddingTop="12dp"
                    android:paddingEnd="20dp"
                    android:paddingBottom="12dp"
                    android:textColor="?attr/secondTextColor"
                    android:textSize="12dp"
                    tools:text="05987d601943c267879be41830888066c6a024cbdc9a548d06813924bf3372ea78" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/large_spacing"
                android:layout_weight="1"
                android:background="@drawable/shape_bg_top_20"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Path -->
                <RelativeLayout
                    android:id="@+id/rlAllMedia"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/setting_button_height"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ivAllMedia"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_all_media"
                        app:tint="?android:textColorPrimary" />

                    <TextView
                        android:id="@+id/tvAllMedia"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="@dimen/medium_spacing"
                        android:layout_toEndOf="@+id/ivAllMedia"
                        android:gravity="center"
                        android:text="@string/conversation__menu_view_all_media"
                        android:textColor="?android:textColorPrimary"
                        android:textSize="@dimen/medium_font_size"
                        android:textStyle="bold" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginStart="66dp"
                    android:background="?borderColor"
                    android:visibility="visible" />

                <RelativeLayout
                    android:id="@+id/rlSearch"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/setting_button_height">

                    <ImageView
                        android:id="@+id/ivSearch"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_search_24"
                        app:tint="?android:textColorPrimary" />

                    <TextView
                        android:id="@+id/tvSearch"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="@dimen/medium_spacing"
                        android:layout_toEndOf="@+id/ivSearch"
                        android:gravity="center"
                        android:text="@string/SearchToolbar_search"
                        android:textColor="?android:textColorPrimary"
                        android:textSize="@dimen/medium_font_size"
                        android:textStyle="bold" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginStart="66dp"
                    android:background="?borderColor"
                    android:visibility="visible" />

                <RelativeLayout
                    android:id="@+id/rlExpiration"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/setting_button_height"
                    android:contentDescription="@string/AccessibilityId_notifications">

                    <ImageView
                        android:id="@+id/ivExpiration"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_timer"
                        app:tint="?android:textColorPrimary" />

                    <TextView
                        android:id="@+id/tvExpiration"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="@dimen/medium_spacing"
                        android:layout_toEndOf="@+id/ivExpiration"
                        android:gravity="center"
                        android:text="@string/conversation_expiring_off__disappearing_messages"
                        android:textColor="?android:textColorPrimary"
                        android:textSize="@dimen/medium_font_size"
                        android:textStyle="bold" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginStart="66dp"
                    android:background="?borderColor"
                    android:visibility="visible" />

                <RelativeLayout
                    android:id="@+id/rlMute"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/setting_button_height"
                    android:contentDescription="@string/AccessibilityId_conversations">

                    <ImageView
                        android:id="@+id/ivMute"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_mute"
                        app:tint="?android:textColorPrimary" />

                    <TextView
                        android:id="@+id/tvMute"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="@dimen/medium_spacing"
                        android:layout_toEndOf="@+id/ivMute"
                        android:gravity="center"
                        android:text="@string/mute"
                        android:textColor="?android:textColorPrimary"
                        android:textSize="@dimen/medium_font_size"
                        android:textStyle="bold" />

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/switchMute"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:visibility="gone" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginStart="66dp"
                    android:background="?borderColor"
                    android:visibility="visible" />

                <RelativeLayout
                    android:id="@+id/rlBlock"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/setting_button_height"
                    android:contentDescription="@string/AccessibilityId_message_requests">

                    <ImageView
                        android:id="@+id/ivBlock"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_block"
                        app:tint="?android:textColorPrimary" />

                    <TextView
                        android:id="@+id/tvBlock"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="@dimen/medium_spacing"
                        android:layout_toEndOf="@+id/ivBlock"
                        android:gravity="center"
                        android:text="@string/recipient_preferences__block"
                        android:textColor="?android:textColorPrimary"
                        android:textSize="@dimen/medium_font_size"
                        android:textStyle="bold" />

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/switchBlock"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:visibility="gone" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginStart="66dp"
                    android:background="?borderColor" />

                <RelativeLayout
                    android:id="@+id/rlEditGroup"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/setting_button_height"
                    android:contentDescription="@string/AccessibilityId_appearance">

                    <ImageView
                        android:id="@+id/ivEditGroup"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_edit_group"
                        app:tint="?android:textColorPrimary" />

                    <TextView
                        android:id="@+id/tvEditGroup"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="@dimen/medium_spacing"
                        android:layout_toEndOf="@+id/ivEditGroup"
                        android:gravity="center"
                        android:text="@string/conversation__menu_edit_group"
                        android:textColor="?android:textColorPrimary"
                        android:textSize="@dimen/medium_font_size"
                        android:textStyle="bold" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginStart="66dp"
                    android:background="?borderColor"
                    android:visibility="visible" />

                <RelativeLayout
                    android:id="@+id/rlLeaveGroup"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/setting_button_height"
                    android:contentDescription="@string/AccessibilityId_invite_friend">

                    <ImageView
                        android:id="@+id/ivLeaveGroup"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_leave_group"
                        app:tint="?android:textColorPrimary" />

                    <TextView
                        android:id="@+id/tvLeaveGroup"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="@dimen/medium_spacing"
                        android:layout_toEndOf="@+id/ivLeaveGroup"
                        android:gravity="center"
                        android:text="@string/conversation__menu_leave_group"
                        android:textColor="?android:textColorPrimary"
                        android:textSize="@dimen/medium_font_size"
                        android:textStyle="bold" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginStart="66dp"
                    android:background="?borderColor"
                    android:visibility="visible" />

                <RelativeLayout
                    android:id="@+id/rlNotification"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/setting_button_height"
                    android:contentDescription="@string/AccessibilityId_recovery_phrase">

                    <ImageView
                        android:id="@+id/ivNotification"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_notification_1"
                        app:tint="?android:textColorPrimary" />

                    <TextView
                        android:id="@+id/tvNotification"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="@dimen/medium_spacing"
                        android:layout_toEndOf="@+id/ivNotification"
                        android:gravity="center"
                        android:text="@string/RecipientPreferenceActivity_notification_settings"
                        android:textColor="?android:textColorPrimary"
                        android:textSize="@dimen/medium_font_size"
                        android:textStyle="bold" />

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/switchNotification"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:visibility="gone" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginStart="66dp"
                    android:background="?borderColor" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>